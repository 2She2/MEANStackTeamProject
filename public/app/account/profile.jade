.container
    .col-md-2
    .well.col-md-8
        form.form-horizontal(name="profileForm")
            fieldset
                legend Update User Profile
                .form-group
                    label.col-md-2.control-label(for="first-name") First Name
                    .col-md-10
                        input.form-control(id="first-name" type="text" placeholder="First Name" ng-model="user.firstName" required)
                .form-group
                    label.col-md-2.control-label(for="last-name") Last Name
                    .col-md-10
                        input.form-control(id="last-name" type="text" placeholder="Last Name" ng-model="user.lastName" required)
                .form-group
                    label.col-md-2.control-label(for="password") Password
                    .col-md-10
                        input.form-control(id="password" type="password" placeholder="Password" ng-model="user.password" required)
                .form-group
                    label.col-md-2.control-label(for="city") City
                    .col-md-10
                        input.form-control(id="city" type="text" placeholder="City" ng-model="user.city")
                .form-group
                    label.col-md-2.control-label(for="phone-number") Phone number
                    .col-md-10
                        input.form-control(id="phone-number" type="text" placeholder="Phone number" ng-model="user.phone")
                .pull-right
                    button.btn.btn-primary(ng-click="update(user)" ng-disabled="profileForm.$invalid") Update
                    a.btn.btn-primary(href="#/") Cancel
